<!DOCTYPE <!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <% include ../partials/head %>
        <link rel="stylesheet" href="/CPPG/assets/css/presentationDetails.css" />
</head>

<body class="pt-5 text-center">
    <header class="mt-5">
        <% include ../partials/navbar %>
    </header>

    <main role="main" class="container" id="main">
        <% for (presentation of presentations) { %>
            <h3 class="pb-4 mb-4 font-italic border-bottom inset-text">
                <%=presentation['titulo']%>
            </h3>

            <div class="blog-post">
                <div class="media d-block float-left pl-0 pr-0 mr-md-5 no-gutters border rounded col-sm-6">
                    <% if (presentation['apresentado']) { %>
                        <img src="<%=presentation['galeria_imagens']%>photo1.jpg" class="media-photo mb-2" width="100%" alt="foto do autor(a)">
                    <% } else { %>
                        <img src="/CPPG/assets/images/2cisp.jpg" class="media-photo mb-2" width="100%" alt="2º cisp">
                    <% } %>
                    
                    <h2 class="blog-post-title">
                        <%=presentation['apresentador']%>
                    </h2>

                    <p class="mb-1 text-muted">
                        <a href="<%=presentation['lattes']%>" target="_blank">
                            <img src="/CPPG/assets/images/cisp/lattes.png" class="thumbnail mb-2" style="height: auto; width: auto;" alt="currículo lattes">
                        </a>
                        <br>
                        <%= presentation['data'];%>
                        <br>
                        <%= presentations['hora'] %>
                        <br>
                        <%= presentation['local']; %>
                    </p>
                </div>
                <!-- CONTAINER -->
                <h2 class="mt-3 inset-text">Resumo da Apresentação</h2>
                <p>
                    <%= presentation['resumo']; %>
                </p>
                <div style="clear: both;"></div>
                <br>
                <hr>
                <h2 class="mt-3 inset-text">Sobre o(a) Apresentador(a)</h2>
                <p>
                    <%= presentation['sobre_apresentador']; %>
                </p>
                <% if(presentation['apresentado']) { %>
                    <div class="container">
                        <hr>
                        <h2 class="mt-3 inset-text">Fotos da Apresentação</h2>
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="<%=presentation['galeria_imagens']%>photo1.jpg" alt="Primeiro slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="<%=presentation['galeria_imagens']%>photo2.jpg" alt="Segundo slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="<%=presentation['galeria_imagens']%>photo3.jpg" alt="Terceiro slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Anterior</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Próximo</span>
                            </a>
                        </div>
                        <!--FIM CAROUSEL-->
                    </div>
                    <!--FIM CONTAINER-->
                    <% } %>
            </div>
            <!-- /.blog-post -->
            <% } %>
    </main>

    <!-- Bootstrap core JavaScript -->
    <% include ../partials/footer %>
        <script type="text/javascript">
            document.title = 'Detalhes da Apresentação - ' + document.title;
        </script>
</body>

</html>